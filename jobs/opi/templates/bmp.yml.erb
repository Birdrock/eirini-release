---
processes:
  - name: opi # same as BOSH-job name means `-p <process>` is not needed
    executable: /var/vcap/packages/eirini/bin/opi
    args:
    - connect
    - --config
    - /var/vcap/jobs/opi/config/opi.yml
    limits:
      memory: 3G
      processes: 10
      open_files: 100000
    ephemeral_disk: true # mount /var/vcap/data/the_job ; default `false`
                         # NOTE: /var/vcap/data/the_job/tmp is always mounted `rw`
